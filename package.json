{
  "name": "@pilotso11/pdflight",
  "version": "0.1.4",
  "type": "module",
  "description": "PDF viewer with precise text highlighting and smart search",
  "main": "./dist/pdflight.js",
  "module": "./dist/pdflight.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pdflight.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "vite build",
    "build:cdn": "vite build --config vite.config.cdn.ts",
    "dev": "vite --config vite.config.demo.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:debug": "bunx playwright test --debug",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "typecheck": "tsc --noEmit",
    "preview": "vite build --config vite.config.demo.ts && vite preview --config vite.config.demo.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pilotso11/pdflight.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "ajv": "^8.18.0",
    "eslint": "^10.0.2",
    "jsdom": "^28.1.0",
    "pdf-lib": "^1.17.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "pdfjs-dist": "^5.4.624"
  }
}
